<ui:ContentDialog
    x:Class="Nexus.Dialogs.ChangeIntervalDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Change Check Interval"
    PrimaryButtonText="Set"
    CloseButtonText="Cancel"
    Background="#121212"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    Loaded="ContentDialog_Loaded">

    <StackPanel>
        <TextBlock Text="Check Interval (MS)" TextWrapping="Wrap"/>
        <Separator Background="Transparent"/>
        <TextBox x:Name="IntervalBox" MaxLines="1" MaxLength="30" Background="#0F0F0F" ToolTip="How often should Nexus check if Roblox is open"/>
    </StackPanel>

</ui:ContentDialog>
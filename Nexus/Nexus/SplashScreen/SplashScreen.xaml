<Window x:Class="Nexus.SplashScreen.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SplashScreen" WindowStartupLocation="CenterScreen" Topmost="True" Height="404" Width="608" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="{x:Null}" ShowInTaskbar="False">

    <Border x:Name="MainBorder" BorderThickness="0" CornerRadius="8" Loaded="MainBorder_Loaded">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,2" EndPoint="1,1">
                <GradientStop Color="Purple" Offset="0"/>
                <GradientStop Color="Yellow" Offset="3.5"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Label Content="Nexus" FontFamily="Segoe UI Semibold" Foreground="White" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,89,0,0"/>

            <Border x:Name="ProgressBar" HorizontalAlignment="Center" VerticalAlignment="Top" Width="0" Background="White" Margin="0,234,0,0" Height="3" CornerRadius="2"/>
        </Grid>
    </Border>
</Window>
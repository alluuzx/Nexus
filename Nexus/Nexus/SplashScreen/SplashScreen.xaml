<Window x:Class="Nexus.SplashScreen.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="SplashScreen" WindowStartupLocation="CenterScreen" Topmost="True" Height="404" Width="608" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="{x:Null}" ShowInTaskbar="False">

    <Border x:Name="MainBorder" Background="{StaticResource Gradient}" BorderThickness="0" CornerRadius="8" Loaded="MainBorder_Loaded">
        <Grid>
            <Label Content="Nexus" FontFamily="Segoe UI Semibold" Foreground="White" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>

            <Label Content="Updating..." x:Name="Update" Visibility="Hidden" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Top" Margin="0,279,0,0"/>
            <ui:ProgressRing ToolTip="Loading Nexus..." IsActive="False" x:Name="Progress" Foreground="White" Margin="0,214,0,0" VerticalAlignment="Top" Width="40" Height="40"/>
        </Grid>
    </Border>
</Window>